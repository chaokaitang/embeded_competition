.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.grid-item {
  width: 350rpx; /* 调整商品格子的宽度 */
  height: 450rpx; /* 调整商品格子的高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
}

.grid-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.grid-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
}

.attractiveness-button {
  width: 100%;
  max-width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #3498db;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  cursor: pointer;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog {
  background-color: #ffffff;
  padding: 20rpx;
  width: 80%;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.dialog-header {
  font-size: 20rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.dialog-content {
  margin-bottom: 20rpx;
}

.dialog-input {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.image-upload {
  text-align: center;
}

.upload-button {
  background-color: #3498db;
  color: #ffffff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
}

.uploaded-image {
  width: 100px;
  height: 100px;
  margin-top: 10rpx;
}

.dialog-footer {
  display: flex;
  justify-content: space-around;
}

.dialog-button {
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 5rpx;
  cursor: pointer;
}

.cancel-button {
  background-color: #e74c3c;
  color: #ffffff;
}

.confirm-button {
  background-color: #2ecc71;
  color: #ffffff;
}
